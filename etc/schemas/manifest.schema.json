{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://kemet-data.org/schemas/manifest.v1.json",
  "title": "Manifest",
  "description": "Schema for collection manifest (artifacts and checksums)",
  "type": "object",
  "required": [
    "source",
    "collection",
    "version",
    "created_at",
    "artifacts"
  ],
  "properties": {
    "source": {
      "type": "string",
      "description": "Source system name"
    },
    "collection": {
      "type": "string",
      "description": "Collection name"
    },
    "version": {
      "type": "integer",
      "description": "Schema version",
      "minimum": 1
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp",
      "format": "date-time"
    },
    "parser_version": {
      "type": "string",
      "description": "Parser identifier and version"
    },
    "artifacts": {
      "type": "array",
      "description": "List of generated artifacts",
      "items": {
        "type": "object",
        "required": ["path", "type", "hash", "size_bytes"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Relative path to artifact"
          },
          "type": {
            "type": "string",
            "description": "Artifact type",
            "enum": ["documents", "segments", "tokens", "metadata"]
          },
          "hash": {
            "type": "string",
            "description": "BLAKE3 hash of file",
            "pattern": "^blake3:[a-f0-9]{64}$"
          },
          "size_bytes": {
            "type": "integer",
            "description": "File size in bytes",
            "minimum": 0
          },
          "row_count": {
            "type": ["integer", "null"],
            "description": "Number of rows (for tabular data)"
          }
        }
      }
    },
    "counts": {
      "type": "object",
      "description": "Collection statistics",
      "properties": {
        "documents": {
          "type": "integer",
          "minimum": 0
        },
        "segments": {
          "type": "integer",
          "minimum": 0
        },
        "tokens": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional collection metadata"
    }
  }
}
